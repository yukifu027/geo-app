.side-bar 
  .side-bar__user
    .top-items
      .top-items__user
        %img.top-items__user__image{src: current_user.image, alt: "プロフィール写真"}
        .top-items__user__name
          = current_user.name
      .top-items__icon
        = link_to edit_user_path(current_user), class: "setting-btn" do
          = icon('fas', 'cog')
  .side-bar__like
    .title
      = icon('fas', 'thumbs-up')
      いいね
    .contents
      - @likes.each do |like|
        = link_to guide_path(like.guide.id) do
          %img.contents__image{src: like.guide.image, alt: "ガイドトップ画像"}
  .side-bar__buy
    .title
      = icon('fas', 'shopping-cart')
      購入済みガイド
    .contents
      - @solds.each do |sold|
        = link_to guide_path(sold.guide.id) do
          %img.contents__image{src: sold.guide.image, alt: "ガイドトップ画像"}